<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:paddingBottom="30dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <RelativeLayout
                android:id="@+id/timetablesection"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_rounded_button">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/module1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="45dp"
                    android:text="normal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/comfortaa_bold"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="45dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="45dp"
                    app:srcCompat="@drawable/ic_room_black" />

                <TextView
                    android:id="@+id/tvTimetableRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="70dp"
                    android:text="@string/timetableRoom"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/comfortaa_bold" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="45dp"
                    app:srcCompat="@drawable/ic_time_black"
                    android:layout_marginLeft="45dp"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tvTimetableTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView5"
                    android:text="@string/time"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/comfortaa_bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</merge>