<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/login">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="612dp"
        android:layout_height="222dp"
        android:layout_marginLeft="244dp"
        android:layout_marginStart="244dp"
        android:background="@drawable/dit"
        android:contentDescription="@string/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="427dp"
        android:layout_height="73dp"
        android:layout_marginLeft="372dp"
        android:layout_marginStart="372dp"
        android:layout_marginTop="252dp"
        android:hint="@string/username"
        android:inputType="textWebEditText"
        android:paddingEnd="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:paddingStart="50dp"
        android:textColorHint="#FFF"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:theme="@style/MyEditTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="427dp"
        android:layout_height="73dp"
        android:layout_marginLeft="364dp"
        android:layout_marginStart="364dp"
        android:layout_marginTop="12dp"
        android:hint="@string/password"
        android:inputType="textWebPassword"
        android:paddingEnd="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:paddingStart="50dp"
        android:textColorHint="#FFF"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:theme="@style/MyEditTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_marginLeft="256dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="252dp"
        android:contentDescription="@string/person_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_marginLeft="256dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="340dp"
        android:contentDescription="@string/lock_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lock" />

    <Button
        android:id="@+id/button"
        android:layout_width="580dp"
        android:layout_height="55dp"
        android:layout_marginLeft="220dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="444dp"
        android:background="@drawable/circle"
        android:contentDescription="@string/login_button"
        android:textColor="#fff"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       android:text="@string/login" />


</android.support.constraint.ConstraintLayout>